                                        </Track.DecreaseRepeatButton>
                                    </Track>
                                    <RepeatButton
                                            Grid.Column="2"
                                            x:Name="IncreaseRepeat"
                                            FocusVisualStyle="{x:Null}"
                                            Style="{StaticResource HorizontalRepeatButtonStyle}"
                                            Command="ScrollBar.LineRightCommand"
                                            IsTabStop="False">
                                        <Path x:Name="IncreaseArrow"
