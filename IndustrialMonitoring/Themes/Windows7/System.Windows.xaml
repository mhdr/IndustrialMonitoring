    <LinearGradientBrush x:Key="ControlActiveElementBackground_Horizontal_Pressed" EndPoint="1,0.5" StartPoint="0,0.5">
        <GradientStop Color="#FFC0CBD9" Offset="0"/>
        <GradientStop Color="#4CC0CBD9" Offset="0.5"/>
    </LinearGradientBrush>
    <LinearGradientBrush x:Key="ControlActiveElementBorder_Horizontal_Pressed" EndPoint="1,0.5" StartPoint="0,0.5">
        <GradientStop Color="#FFC0CBD9" Offset="0"/>
        <GradientStop Color="#4CC0CBD9" Offset="0.5"/>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ScrollBarBackground" Color="#FFF6F9FE"/>
    <LinearGradientBrush x:Key="StatusBar_Background" EndPoint="0.5,1" StartPoint="0.5,0">
