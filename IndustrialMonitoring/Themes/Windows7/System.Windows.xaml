        <Setter Property="Width" Value="Auto"/>
        <Setter Property="Height" Value="Auto"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ScrollBar}">
                    <Border x:Name="border" Background="{StaticResource ScrollBarBackground}">
                        <Grid x:Name="GridRoot">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="17"/>
                                <RowDefinition x:Name="rowDefinition" Height="1*"/>
                                <RowDefinition Height="17"/>
                            </Grid.RowDefinitions>
                            <RepeatButton x:Name="DecreaseRepeat"
                                    FocusVisualStyle="{x:Null}"
                                    Style="{StaticResource VerticalRepeatButtonStyle}"
                                    IsTabStop="False"
                                    Interval="50"
                                    Command="ScrollBar.LineUpCommand">
                                <Path x:Name="DecreaseArrow" Data="M 0 4 L 8 4 L 4 0 Z" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}"/>
                            </RepeatButton>
                            <Track x:Name="PART_Track" Grid.Row="1" Orientation="Vertical" IsDirectionReversed="true">
                                <Track.Resources>

                                    <!-- Thumb's minimum height is half of this metric -->
                                    <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarButtonHeightKey}">35</sys:Double>
                                </Track.Resources>
                                <Track.Thumb>
                                    <Thumb x:Name="thumb" Style="{StaticResource VerticalScrollBarThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton x:Name="PageUp" FocusVisualStyle="{x:Null}" Style="{StaticResource ScrollViewerRepeatButtonStyle}" Command="ScrollBar.PageDownCommand" IsTabStop="False"/>
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton x:Name="PageDown" FocusVisualStyle="{x:Null}" Style="{StaticResource ScrollViewerRepeatButtonStyle}" Command="ScrollBar.PageUpCommand" IsTabStop="False"/>
                                </Track.DecreaseRepeatButton>
                            </Track>
                            <RepeatButton
                                    Grid.Row="2"
                                    x:Name="IncreaseRepeat"
                                    FocusVisualStyle="{x:Null}"
                                    Style="{StaticResource VerticalRepeatButtonStyle}"
                                    Command="ScrollBar.LineDownCommand"
                                    IsTabStop="False">
                                <Path x:Name="IncreaseArrow" Data="M 0 0 L 4 4 L 8 0 Z" Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type ContentControl}}}"/>
                            </RepeatButton>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="Orientation" Value="Horizontal">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ScrollBar}">
